<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- App Toolbar Theme -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- App Toolbar Menu Theme -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Shared Styles -->

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FullWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FullHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Main Screen -->

    <style name="MainContainer" parent="MatchParent">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Side Nav Drawer -->

    <style name="SideNavDrawer" parent="FullHeight">
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="headerLayout">@layout/nav_header_main</item>
        <item name="menu">@menu/activity_main_drawer</item>
    </style>

    <style name="SideNavHeaderLayout" parent="FullWidth">
        <item name="android:layout_height">@dimen/nav_header_height</item>
        <item name="android:background">@drawable/side_nav_bar</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="SideNavHeaderImage" parent="WrapContent">
        <item name="android:paddingTop">@dimen/nav_header_vertical_spacing</item>
        <item name="srcCompat">@mipmap/ic_launcher_round</item>
    </style>

    <style name="SideNavHeaderTitle" parent="FullWidth">
        <item name="android:paddingTop">@dimen/nav_header_vertical_spacing</item>
        <item name="android:text">Android Studio</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="SideNavHeaderSubtitle" parent="WrapContent">
        <item name="android:text">android.studio@android.com</item>
    </style>

    <!-- App Toolbar -->

    <style name="AppBarContainer" parent="MatchParent">
    </style>

    <style name="AppBarLayout" parent="FullWidth">
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="AppToolbar" parent="FullWidth">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <!-- Tabs -->

    <style name="TabLayout" parent="FullWidth">
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <!-- Main Content -->
    <style name="MainContentContainer" parent="MatchParent">
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <!-- Main Content -->
    <style name="ArticleList" parent="MatchParent">
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <style name="ArticleSummaryItem" parent="FullWidth">
        <item name="android:layout_marginLeft">@dimen/dp_medium</item>
        <item name="android:layout_marginRight">@dimen/dp_medium</item>
        <item name="android:layout_marginTop">@dimen/dp_medium</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ArticleSummaryItemContents" parent="FullWidth">
        <item name="android:orientation">vertical</item>
    </style>

</resources>
